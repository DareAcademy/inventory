@model CompanyDTO

@{
    Layout = "~/views/shared/InventoryLayout.cshtml";
}
@section body

    {

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> Add Company</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Add Company</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Add Company </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="card-body">
                                <input type="hidden" asp-for="Id">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label"> Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="Phone" asp-for="phone">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Tax</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control" placeholder="Tax" asp-for="TaxPersent">
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                @if ((bool)ViewData["IsEdit"]==true)
                                {
                                    <input type="submit" class="btn btn-primary" asp-action="Update" value="Update" />
                                }
                                else
                                {
                                    <input type="submit" class="btn btn-primary" asp-action="Save" value="Save" />
                                }
                                <input type="submit" class="btn-default" asp-action="Index" value="Cancel" />
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}